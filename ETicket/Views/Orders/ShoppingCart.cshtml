


@{
    ViewData["Title"] = "Shopping cart summary";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>You shopping cart summary</h2>
        </div>

        <table class="table">
            <thead>
                <tr>
                    @*<th>date</th>
                    <th>Cinema</th>
                    <th>Parties</th>*@
                    <th>Amount</th>
                    <th>Movie</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            
                @foreach (var item in ViewBag.ElItems)
                {
                    <tr>
                        @*<td>
                            <input type="date">
                        </td>
                        <td>
                            <select class="form-control" asp-items="@item.Cinemas_Movies"></select>
                        </td>
                        <td>
                            <select class="form-control" asp-items="@item.Parties_Movies"></select>
                        </td>*@
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Movie.Name</td>
                        <td class="align-middle">@item.Movie.Price.ToString("c")</td>
                        <td class="align-middle">@((item.Amount * item.Movie.Price).ToString("c"))</td>
                        <td class="align-middle">
                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart"
                           asp-route-id="@item.Movie.Id">
                                <!--<i class="bi bi-cart-dash"></i>-->-
                            </a>
                            |
                            <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart"
                           asp-route-id="@item.Movie.Id">
                                <!--<="bi bi-cart-plus"></i>-->+
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total:</b></td>
                    <td>
                        @Model.ShoppingCartTotal.ToString("c")
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                @*<form asp-action="CompleteOrder">

                </form>*@
                @*<a class="btn btn-outline-primary" asp-action="CompleteOrder">
                Complete order
                </a>*@
                @*<div id="paypal-btn"></div>*@
                @*<span style="padding:5px"></span>*@
                <button type="button" id="modalBtn" class="btn btn-outline-success" data-toggle="modal" data-target="#Chekout">
                    Chekout
                </button>
                <a class="btn btn-outline-success" asp-controller="Movies" asp-action="Index">
                    Add more items
                </a>
            </div>
        </div>

    </div>
</div>

    @await Html.PartialAsync("_CompleteOrderPartialView", new Order());

